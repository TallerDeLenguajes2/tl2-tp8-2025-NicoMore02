@{
    ViewData["Title"] = "Editar Presupuesto";
}
@model SistemaVentas.Web.ViewModels.PresupuestoViewModel

<h2>Editar Presupuesto #@Model.idPresupuesto</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Editar" method="post">
            
            <input type="hidden" asp-for="idPresupuesto" />
            
            <div class="form-group">
                <label asp-for="NombreDestinatario" class="control-label"></label>
                <input asp-for="NombreDestinatario" class="form-control" />
                <span asp-validation-for="NombreDestinatario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaCreacion" class="control-label"></label>
                <input asp-for="FechaCreacion" type="date" class="form-control" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Actualizar Presupuesto
                </button>
                <a href="@Url.Action(action: "AddProduct", new { id = Model.idPresupuesto })" class="btn btn-dark">Agregar Producto</a>
                <a href="@Url.Action("Details", new { id = Model.idPresupuesto })" class="btn btn-info">
                    <i class="fas fa-eye"></i> Ver Detalle
                </a>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a la Lista
                </a>
            </div>
        </form>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5>Información del Presupuesto</h5>
            </div>
            <div class="card-body">
                <p><strong>ID:</strong> @Model.idPresupuesto</p>
                <p><strong>Fecha de creación original:</strong> @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</p>
            </div>
        </div>
@section Scripts {<partial name="_ValidationScriptsPartial" />}